{
  "name": "nijsac",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "lint": "eslint .",
    "lint:fix": "eslint --fix",
    "format": "prettier --write './**/*.{js,jsx,ts,tsx,css,md,json}' --config ./.prettierrc"
  },
  "peerDependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/node": "^22.10.2",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.2",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.17.0",
    "eslint-plugin-react": "^7.37.1",
    "globals": "^15.13.0",
    "prettier": "^3.4.2",
    "tailwindcss": "^3.4.16",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.0",
    "vite": "^6.0.3"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "husky": {
      "hooks": {
        "pre-commit": "npm run lint && npm run format"
      }
    },
    "lint-staged": {
      "*.+(js|jsx)": [
        "eslint --fix",
        "git add"
      ],
      "*.+(json|css|md)": [
        "prettier --write",
        "git add"
      ]
    }
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mui/icons-material": "^6.2.0",
    "@mui/material": "^6.1.8",
    "moment": "^2.30.1",
    "notistack": "^3.0.1",
    "react-cookie": "^7.2.2",
    "react-data-table-component": "^7.6.2",
    "react-markdown": "^9.0.1",
    "react-router-dom": "^7.0.2"
  }
}
