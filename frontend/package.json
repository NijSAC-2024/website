{
  "name": "nijsac",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "lint": "eslint .",
    "lint:fix": "eslint --fix",
    "format": "prettier --write './**/*.{js,jsx,ts,tsx,css,md,json}' --config ./.prettierrc"
  },
  "peerDependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@types/node": "^22.13.0",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.19.0",
    "eslint-plugin-react": "^7.37.4",
    "globals": "^15.14.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.22.0",
    "vite": "^6.0.11"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "husky": {
      "hooks": {
        "pre-commit": "npm run lint && npm run format"
      }
    },
    "lint-staged": {
      "*.+(js|jsx)": [
        "eslint --fix",
        "git add"
      ],
      "*.+(json|css|md)": [
        "prettier --write",
        "git add"
      ]
    }
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mui/icons-material": "^6.4.2",
    "@mui/lab": "^6.0.0-beta.25",
    "@mui/material": "^6.4.2",
    "@mui/x-date-pickers": "^7.25.0",
    "@tailwindcss/vite": "^4.0.3",
    "moment": "^2.30.1",
    "notistack": "^3.0.2",
    "react-cookie": "^7.2.2",
    "react-markdown": "^9.0.3",
    "remark-gfm": "^4.0.0"
  }
}
